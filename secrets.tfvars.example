# =============================================================================
# SECRETS CONFIGURATION FILE - DO NOT COMMIT TO VERSION CONTROL
# =============================================================================
# 
# This file contains sensitive values that should never be committed to Git.
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file: cp secrets.tfvars.example secrets.tfvars
# 2. Fill in your actual values in secrets.tfvars
# 3. Use with: terraform plan -var-file="secrets.tfvars"
# 4. Ensure secrets.tfvars is in .gitignore
#
# SECURITY NOTES:
# - Never commit files containing actual secrets
# - Use different service principals for different environments
# - Rotate secrets regularly
# - Consider using Azure Key Vault for production secrets
# - Use least privilege principle for service principal permissions

# =============================================================================
# AZURE AUTHENTICATION (Service Principal)
# =============================================================================

# Service Principal Client ID (Application ID)
client_id = "00000000-0000-0000-0000-000000000000"

# Service Principal Client Secret
# NOTE: This is sensitive data - never commit to Git
client_secret = "your-client-secret-here"

# Azure AD Tenant ID
tenant_id = "00000000-0000-0000-0000-000000000000"

# Azure Subscription ID
subscription_id = "00000000-0000-0000-0000-000000000000"

# =============================================================================
# AKS SECURITY CONFIGURATION
# =============================================================================

# Azure AD Group Object IDs for AKS Admin Access
# Get these with: az ad group show --group "GroupName" --query objectId -o tsv
admin_group_object_ids = [
  "00000000-0000-0000-0000-000000000000",  # AKS Admins Group
  # "11111111-1111-1111-1111-111111111111",  # Additional Admin Group
]

# API Server Authorized IP Ranges (your office/VPN IPs)
# Get your current IP with: curl -s https://ipinfo.io/ip
api_server_authorized_ip_ranges = [
  "203.0.113.0/32",    # Your office IP
  "198.51.100.0/24",   # Your VPN range
  # Add more IPs as needed
]

# =============================================================================
# ENVIRONMENT-SPECIFIC SECRETS
# =============================================================================

# Development Environment Secrets
# dev_admin_group_object_ids = ["dev-group-id"]
# dev_api_server_authorized_ip_ranges = ["0.0.0.0/0"]  # More permissive for dev

# Production Environment Secrets  
# prod_admin_group_object_ids = ["prod-group-id"]
# prod_api_server_authorized_ip_ranges = ["10.0.0.0/8"]  # More restrictive

# =============================================================================
# OPTIONAL: DATABASE/SERVICE SECRETS (if adding other modules)
# =============================================================================

# Example: If adding Azure Key Vault or databases
# database_admin_password = "your-secure-password"
# key_vault_secret_values = {
#   "app-connection-string" = "your-connection-string"
#   "api-key"              = "your-api-key"
# }

# =============================================================================
# NOTES ON SECRET MANAGEMENT
# =============================================================================
#
# For production deployments, consider these alternatives:
#
# 1. Azure Key Vault:
#    - Store secrets in Azure Key Vault
#    - Reference them in Terraform using data sources
#    - Grant service principal access to Key Vault
#
# 2. Environment Variables:
#    - Set ARM_CLIENT_ID, ARM_CLIENT_SECRET, etc.
#    - Use in CI/CD pipelines
#    - Don't store in plain text files
#
# 3. Azure DevOps Variable Groups:
#    - Store secrets in Azure DevOps
#    - Use in CI/CD pipelines
#    - Enable secret masking
#
# 4. GitHub Secrets:
#    - Store in GitHub repository secrets
#    - Use in GitHub Actions
#    - Never expose in logs
#
# 5. Terraform Cloud/Enterprise:
#    - Use sensitive variables in Terraform Cloud
#    - Automatic encryption at rest
#    - Workspace-specific secrets